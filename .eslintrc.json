{
  "extends": [
    "standard",
    "eslint:recommended"
  ],
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "semi": "off",
    "camelcase": "off",
    "no-unneeded-ternary": "off",
    "no-control-regex": "off",
    "no-useless-escape": "off",
    // "no-unused-vars": "off",
    // "no-multi-spaces": "off",
    // "new-cap": "off",
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "comma-dangle": [
      "error",
      "only-multiline"
    ]
  },
  "env": {
    "node": true,
    "browser": true,
    "es2020": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  }
}